<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="false" android:baselineAligned="false" android:gravity="center_vertical|center_horizontal">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center"
            android:id="@+id/imageStartButton"
            android:src="@drawable/img_start_button" android:onClick="onClickStart"
            android:contentDescription="image start button"
            android:background="@android:color/transparent"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonQuit" android:layout_gravity="center"
            android:src="@drawable/img_quit_button" android:onClick="onClickQuit"
            android:background="@android:color/transparent"/>
</LinearLayout>

